<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Students</title>
    <link rel="stylesheet" href="/Student/ListStudents.css">
</head>

<body>
    <div class="listContainer">
        <div class="containerHead">
            <div class="shortcut">
                <div class="easynav">
                    <a href="/dashboard">Back</a>
                </div>
                <h3>Interviews</h3>
                <div class="logButton">
                    <a href="/auth/logout">Logout</a>
                </div>
            </div>

            <hr>
        </div>
        <div class="content">
            <div class="actionButton">
                <a href="/students/add">Add Student</a>
                <a href="/students/export">Export CSV</a>
            </div>
            <div class="tableChart">
                <table class="studentTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>College</th>
                            <th>Status</th>
                            <th>Batch</th>
                            <th>DSA Score</th>
                            <th>WebD Score</th>
                            <th>React Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% students.forEach(student=> { %>
                            <tr>
                                <td>
                                    <%= student.name %>
                                </td>
                                <td>
                                    <%= student.college %>
                                </td>
                                <td>
                                    <%= student.status %>
                                </td>
                                <td>
                                    <%= student.batch %>
                                </td>
                                <td>
                                    <%= student.scores.dsa %>
                                </td>
                                <td>
                                    <%= student.scores.webd %>
                                </td>
                                <td>
                                    <%= student.scores.react %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>